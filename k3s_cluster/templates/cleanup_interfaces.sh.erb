#!/bin/bash
# K3S network interfaces cleanup script
# Generated by Puppet - do not edit manually

# Remove K3S-created network interfaces
for iface in $(ip link show | grep -E "flannel|cni|veth" | cut -d: -f2 | tr -d ' '); do
  echo "Removing interface: $iface"
  ip link delete "$iface" 2>/dev/null || true
done

# Remove bridge interfaces
for bridge in $(ip link show type bridge | grep -E "cni|flannel" | cut -d: -f2 | tr -d ' '); do
  echo "Removing bridge: $bridge"
  ip link delete "$bridge" 2>/dev/null || true
done

echo "K3S network interfaces cleaned up" 