#!/bin/bash
# K3S mount points cleanup script
# Generated by Puppet - do not edit manually

# Unmount K3S-related mount points
for mount in $(mount | grep -E "k3s|containerd" | awk '{print $3}'); do
  echo "Unmounting: $mount"
  umount "$mount" 2>/dev/null || true
done

# Unmount overlay filesystems
for mount in $(mount | grep overlay | awk '{print $3}'); do
  echo "Unmounting overlay: $mount"
  umount "$mount" 2>/dev/null || true
done

echo "K3S mount points cleaned up" 